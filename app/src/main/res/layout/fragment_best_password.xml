<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.games.BestPasswordFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/passwordButtonTop"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="100dp"
        android:background="#9E9E9E"
        android:text="Button" />

    <Button
        android:id="@+id/passwordButtonBottom"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="100dp"
        android:background="#F35B4E"
        android:text="Button" />

    <TextView
        android:id="@+id/textView_password1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="135dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Password 1" />

    <TextView
        android:id="@+id/textView_password2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="65dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Password 2" />

</FrameLayout>