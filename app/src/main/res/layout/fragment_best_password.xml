<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2B3F8E0"
    tools:context=".ui.games.BestPasswordFragment">

    <Button
        android:id="@+id/passwordButtonTop"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="100dp"
        android:background="#9E9E9E"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/passwordButtonBottom"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="100dp"
        android:background="#F35B4E"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/textView_password1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginBottom="135dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Password 1" />

    <TextView
        android:id="@+id/textView_password2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginTop="65dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Password 2" />

    <TextView
        android:id="@+id/textScoreDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:singleLine="false"
        android:textSize="24sp"
        android:paddingTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the more secure password!"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:id="@+id/instructions"
        android:paddingTop="20dp"/>

</FrameLayout>